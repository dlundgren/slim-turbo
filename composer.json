{
    "name": "dlundgren/slim-turbo",
    "type": "library",
    "description": "SlimTurbo is an add on to Slim to enable full route caching",
    "keywords": [
        "framework",
        "micro",
        "api",
        "router"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "David Lundgren",
            "email": "dlundgren@syberisle.net",
            "homepage": "http://www.davidscode.com"
        }
    ],
    "config": {
        "sort-packages": true
    },
    "require": {
        "middlewares/utils": "^2.2 | ^3.0 | ^4.0",
        "psr/simple-cache": "^1 | ^2 | ^3",
        "slim/slim": "^4.4"
    },
    "require-dev": {
        "cache/filesystem-adapter": "^1.0",
        "cache/simple-cache-bridge": "^1.0",
        "php-di/php-di": "^6.0 | ^7.0",
        "phpspec/prophecy": "^1.8",
        "phpstan/phpstan": "^1.4.6",
        "phpunit/phpunit": ">=10.0",
        "slim/psr7": "^1.3",
        "squizlabs/php_codesniffer": "^3.4.2",
        "syberisle/coding-standards": "^2.0",
        "symfony/dependency-injection": ">=5"
    },
    "autoload": {
        "psr-4": {
            "Slim\\Turbo\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Slim\\Turbo\\Test\\": "tests/src"
        }
    },
    "scripts": {
        "test": "@phpunit",
        "test-clover": "@php vendor/bin/phpunit --coverage-clover=build/coverage/clover.xml",
        "test-coverage": "@php vendor/bin/phpunit --coverage-html=build/coverage/html",
        "phpunit": "@php vendor/bin/phpunit",
        "phpcs": "@php vendor/bin/phpcs",
        "phpstan": "@php -d memory_limit=-1 vendor/bin/phpstan analyse src"
    }
}
